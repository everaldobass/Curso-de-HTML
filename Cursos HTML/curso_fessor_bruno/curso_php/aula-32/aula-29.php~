<?php

include"conexao.inc";//Arquivo de conexao com o banco de dados

$res=mysqli_query($con, "SELECT * FROM tb_cadastro");//SELECT COM A TABELA CADASTRO
$linhas=mysqli_num_rows($res);//RETORNA O NUMERO DE LINHAS

echo"Encontrados $linhas registros na tabela tb_cadastro";//EXIBE NA TELA


mysqli_close($con);//Finalizando a conexÃ£o com o Banco de Dados.

?>


