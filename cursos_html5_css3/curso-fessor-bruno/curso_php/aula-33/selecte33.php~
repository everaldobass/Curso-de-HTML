<?php

include"conexao.inc";

$vcat1=$_POST["Cat1"];
$vcat2=$_POST["Cat2"];

$sql="SELECT * FROM tb_produtos WHERE cat=$vcat1 OR cat=$vcat2";

$res=mysqli_query($con,$sql);

while($vreg=mysqli_fetch_row($res)){

$vcod=$vreg[0];
$vprod=$vreg[1];
$vpreco=$vreg[2];
$vqtde=$vreg[3];
